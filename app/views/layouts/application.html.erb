<!DOCTYPE html>
<html>
  <head>
    <title>Shop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if current_customer %>
      Signed as: <%= current_customer.name %> (Customer)
      <%= link_to 'Sign out', destroy_customer_session_path, method: :delete  %>
    <% elsif current_store %>
      Signed as: <%= current_store.name %> (Store)
      <%= link_to 'Sign out', destroy_store_session_path, method: :delete  %>
    <% end %>
    <%= yield %>
  </body>
</html>
