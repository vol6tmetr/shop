<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @store.name %>
</p>

<% if current_store %>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Username</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @store.managers.each do |manager| %>
    <tr>
      <td><%= manager.name %></td>
      <td><%= manager.username %></td>
      <td><%= link_to 'Show', manager %></td>
      <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
      <td><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Create Manager', new_manager_registration_path %>
<% end %>

<% if current_customer %>
  <%= form_tag store_path, method: :get do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag 'Search', :name => nil %>
    </p>
  <% end %>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'Back', stores_path %>
<% end %>