<br>
<h2>Shopping Cart</h2>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Variant</th>
    <th>Price</th>
    <th>Quantity</th>
  </tr>
  </thead>

  <tbody>
  <% @shopping_cart.shopping_cart_item.each do |item| %>
    <% product_variant = ProductVariant.find(item.product_variant_id) %>
      <tr>
        <td><%= product_variant.product.name %></td>
        <td><%= product_variant.title %></td>
        <td><%= product_variant.price %></td>
        <td><%= item.quantity %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<hr>
<h3>Total price:</h3>
<%=  @shopping_cart.price %>
<hr>

<%= form_tag '/checkout', method: :post do %>
  <%= label_tag 'Name' %>
  <%= text_field_tag 'name' %>
  <%= label_tag 'Phone Number' %>
  <%= text_field_tag 'phone_number' %>
  <%= label_tag 'Address' %>
  <%= text_field_tag 'address' %>
  <br>
  <%= submit_tag 'Checkout' %>
<% end %>